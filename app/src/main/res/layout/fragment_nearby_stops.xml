<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NearbyStopsFragment">

    <ListView
        android:id="@+id/list_nearby_stops"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:divider="@null"
        android:dividerHeight="0dp"/>

    <TextView
        android:id="@+id/empty_list_nearby_stops"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No nearby stops available!"
        android:textSize="24sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/permission_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Permission denied, not able to get current location!"
        android:textSize="24sp"
        android:visibility="gone" />

</FrameLayout>